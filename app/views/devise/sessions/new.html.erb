<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="control-group">
    <%= f.label :login, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :login, autofocus: true, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off", :class => 'text_field' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'control-label' %></div>
  <% end -%>
  <div class="form-actions">
    <%= f.submit "Sign in", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
